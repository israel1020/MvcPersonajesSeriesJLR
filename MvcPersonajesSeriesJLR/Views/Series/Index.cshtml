@model IEnumerable<MvcPersonajesSeriesJLR.Models.Serie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">
        Nuevo Serie
    </a>
    <a asp-controller="Series" asp-action="NewPersonaje">
        Nuevo Personaje
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdSerie)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagen)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puntuacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Año)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdSerie)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                <img src="@Html.DisplayFor(modelItem => item.Imagen)" style="width:80px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Puntuacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Año)
            </td>
            <td>
                <a asp-controller="Series" asp-action="Details" asp-route-idserie="@item.IdSerie">Detalles</a> |
                <a asp-controller="Series" asp-action="PersonajesSeries" asp-route-idserie="@item.IdSerie">Personajes </a> |
                <a asp-controller="Series" asp-action="Edit" asp-route-idserie="@item.IdSerie">Modificar</a> |
                <a asp-controller="Series" asp-action="Delete" asp-route-idserie="@item.IdSerie">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
